<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_show_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/recipe_show_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recipe_show_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_show_imageView"
                android:layout_marginTop="33dp"
                android:paddingStart="10dp"
                android:textColor="#000"
                android:textColorHighlight="@color/design_default_color_secondary_variant"
                android:textSize="25sp"
                tools:ignore="RtlSymmetry" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recipe_show_title">

                <TextView
                    android:id="@+id/recipe_show_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Source :"
                    android:paddingStart="10dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/recipe_show_sourceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toEndOf="@id/recipe_show_source"
                    android:paddingStart="10dp"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_alignBaseline="@id/recipe_show_source"
                    tools:ignore="RtlSymmetry">

                </TextView>

                <TextView
                    android:id="@+id/recipe_show_spoonacular_score_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_toStartOf="@id/recipe_show_spoonacularScore"
                    android:text="@string/spoonacular_score">

                </TextView>

                <TextView
                    android:id="@+id/recipe_show_spoonacularScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_alignBaseline="@id/recipe_show_spoonacular_score_name"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp">

                </TextView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recipe_show_sourceName">
                    <TextView
                        android:id="@+id/recipe_show_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingBottom="30dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="5dp" />
                </ScrollView>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>