<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FfF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#F1EEEE"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipe_image_search"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:scaleType="fitXY"
                android:fitsSystemWindows="true"
                android:layout_height="@dimen/Image_Height">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="20">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/recipe_title_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="4dp"
                            android:maxLines="1"
                            android:textSize="@dimen/Recipe_Title_Height"
                            android:hint="This is title"
                            android:textColor="@color/ColorPrimaryText"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"/>
                    </ScrollView>


                    <TextView
                        android:id="@+id/recipe_publisher_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="this is sub title"
                        android:layout_marginStart="8dp"
                        android:textSize="@dimen/Recipe_Publisher"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/recipe_SpooncaluerScore_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:hint="100"
                    android:layout_weight="3"
                    android:textColor="@color/ColorPrimaryText"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>